<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D2B4C"
    android:padding="16dp">

    <!-- Page Title -->
    <TextView
        android:id="@+id/titleAddIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD INCOME"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Category Field -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardIncomeCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1E4D8B"
        app:layout_constraintTop_toBottomOf="@id/titleAddIncome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <EditText
            android:id="@+id/etIncomeCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category"
            android:padding="12dp"
            android:textColorHint="#DDDDDD"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>

    <!-- Income Name Field -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardIncomeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1E4D8B"
        app:layout_constraintTop_toBottomOf="@id/cardIncomeCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/etIncomeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Income Name"
            android:padding="12dp"
            android:textColorHint="#DDDDDD"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>

    <!-- Amount Field -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardIncomeAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1E4D8B"
        app:layout_constraintTop_toBottomOf="@id/cardIncomeName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/etIncomeAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColorHint="#DDDDDD"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>

    <!-- Date Field -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardIncomeDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1E4D8B"
        app:layout_constraintTop_toBottomOf="@id/cardIncomeAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/etIncomeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:textColorHint="#DDDDDD"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmitIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAllCaps="false"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardIncomeDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>