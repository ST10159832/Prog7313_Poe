<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D2B4C"
    android:padding="16dp">

    <!-- Add Expense Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAddExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1E4D8B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_AddExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="Add Expense"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:textSize="16sp"
            android:stateListAnimator="@null" />
    </androidx.cardview.widget.CardView>

    <!-- Add Income Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAddIncome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1E4D8B"
        app:layout_constraintTop_toBottomOf="@id/cardAddExpense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_AddIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="Add Income"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:textSize="16sp"
            android:stateListAnimator="@null" />
    </androidx.cardview.widget.CardView>

    <!-- Spending Overview Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSpendingOverview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1E4D8B"
        app:layout_constraintTop_toBottomOf="@id/cardAddIncome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_SpendingOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="Spending Overview"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:textSize="16sp"
            android:stateListAnimator="@null" />
    </androidx.cardview.widget.CardView>

    <!-- Budget Overview Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBudgetOverview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1E4D8B"
        app:layout_constraintTop_toBottomOf="@id/cardSpendingOverview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_BudgetOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="Budget Overview"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:textSize="16sp"
            android:stateListAnimator="@null" />
    </androidx.cardview.widget.CardView>

    <!-- Funds Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardFunds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1E4D8B"
        app:layout_constraintTop_toBottomOf="@id/cardBudgetOverview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_Funds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="Funds"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:textSize="16sp"
            android:stateListAnimator="@null" />
    </androidx.cardview.widget.CardView>

    <!-- Goals Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardGoals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1E4D8B"
        app:layout_constraintTop_toBottomOf="@id/cardFunds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_Goals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="Goals"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:textSize="16sp"
            android:stateListAnimator="@null" />
    </androidx.cardview.widget.CardView>

    <!-- History Overview Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardHistoryOverview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1E4D8B"
        app:layout_constraintTop_toBottomOf="@id/cardGoals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_HistoryOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="History Overview"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:textSize="16sp"
            android:stateListAnimator="@null" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

