<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D2B4C"
    android:padding="16dp">

    <!-- Add Expense Button styled and centered -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAddExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1E4D8B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardAddIncome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_AddExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="Add Expense"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:textSize="16sp"
            android:stateListAnimator="@null" />
    </androidx.cardview.widget.CardView>

    <!-- Add Income Button styled and centered below -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAddIncome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1E4D8B"
        app:layout_constraintTop_toBottomOf="@id/cardAddExpense"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_AddIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="Add Income"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:textSize="16sp"
            android:stateListAnimator="@null" />
    </androidx.cardview.widget.CardView>

    <include
        layout="@layout/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>